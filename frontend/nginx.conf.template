server {
    listen 3000;
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    # Serve portfolio.json from shared volume
    location /data/ {
        alias ${DATA_DIR}/;
        try_files $uri =404;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }
}

